<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".Detail.DetailStore">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp"
                android:elevation="8dp">
                <Button
                    android:id="@+id/btBack_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btback"
                    android:drawableLeft="@drawable/baseline_arrow_back_24"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/imgVoucher"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/adidas"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/lay_1"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_below="@+id/imgVoucher"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/nameVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADIDAS"
                    android:textSize="26sp"
                    android:textColor="#EA7031"
                    android:fontFamily="@font/anton"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    />
                <TextView
                    android:id="@+id/desVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ADIDAS"
                    android:textSize="18sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>