<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:id="@+id/lay_voucher"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="32dp"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/card_radi"
    app:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_radi">
        <androidx.cardview.widget.CardView
            android:id="@+id/lay_img"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            app:cardCornerRadius="30dp"
            >
            <ImageView
                android:id="@+id/img_khuyenMai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/hot_deal"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_nameVoucher"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="170dp"
            android:layout_marginRight="4dp"
            android:fontFamily="@font/lato_bold"
            android:padding="8dp"
            android:text="Sự kiện"
            android:textColor="#F29500"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>